<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_background"
    tools:context=".ui.HomeFragment">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/text_dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi,"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat_semibold">
        </TextView>
        <TextView
            android:layout_below="@id/text_dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mukidi"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat_semibold">
        </TextView>
        <ImageButton
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_settings_grey_24dp"
            android:layout_width="24dp"
            android:layout_height="24dp">
        </ImageButton>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today's Schedule"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="14sp"
            android:textColor="#000000"
            >
        </TextView>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13 April 2020"
            android:layout_marginLeft="31dp"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_alignParentRight="true"
            >
        </TextView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape1_home"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/completed"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Completed"
                android:textColor="@color/design_default_color_background"
                android:textSize="14sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="2/10"
                android:textColor="#ffffff"
                android:textSize="14sp"></TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/importantScedule"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Important Schedule"
                android:textColor="@color/design_default_color_background"
                android:textSize="14sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="14sp"></TextView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/notCompleted"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Not Completed"
                android:textColor="@color/design_default_color_background"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tanggaltudei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="14sp"></TextView>

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:text="Important Schedule"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="14sp"
        android:textColor="#000000"
        >
        </TextView>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape2_home"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Meeting with Client"
            android:textColor="@color/design_default_color_background"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="19.00-20.00 at RuangKerja"
            android:textColor="@color/design_default_color_background"
            android:textSize="14sp" />

    </LinearLayout>
    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:text="Schedule List"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="14sp"
        android:textColor="#000000"
        >
    </TextView>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape3_home"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Kelas"
            android:textColor="@color/design_default_color_background"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="07.00-11.30 at Kampus"
            android:textColor="@color/design_default_color_background"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape3_home"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Diskusi Kegiatan"
            android:textColor="@color/design_default_color_background"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="13.00-14.30 at Perpusat"
            android:textColor="@color/design_default_color_background"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>

</ScrollView>


